[user]
    name = <Your User Name>
    email = <Your Email>

[url "git@github.com:"]
    insteadOf = https://github.com/

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true # use n and N to move between diff sections
    light = false
    minus-style = syntax "#550000"
    minus-emph-style = syntax "#990000"
    plus-style = syntax "#005500"
    plus-emph-style = syntax "#009900"
    hunk-header-decoration-style = MediumSpringGreen box
    hunk-header-line-number-style = MediumSpringGreen
    file-style = Turquoise italic
    file-decoration-style = Turquoise ul

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
